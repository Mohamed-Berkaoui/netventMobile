{
  "expo": {
    "name": "Event Attendee App",
    "slug": "event-attendee-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "eventapp",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.eventattendeeapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to check you in to events and show nearby activities.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need background location access for automatic event check-in and check-out.",
        "NSBluetoothAlwaysUsageDescription": "We use Bluetooth for indoor navigation and proximity features.",
        "NSBluetoothPeripheralUsageDescription": "We use Bluetooth for indoor navigation and proximity features.",
        "NSCameraUsageDescription": "We need camera access to take photos for posts and your profile.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to select images for posts and your profile."
      }
    },
    "android": {
      "package": "com.yourcompany.eventattendeeapp",
      "adaptiveIcon": {
        "backgroundColor": "#260848",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Event Attendee App to use your location for check-in and navigation.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Event Attendee App to access your photos.",
          "cameraPermission": "Allow Event Attendee App to access your camera."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#260848",
          "dark": {
            "backgroundColor": "#260848"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      },
      "supabaseUrl": "https://ylelzeihqkynbppmysam.supabase.co",
      "supabaseAnonKey": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InlsZWx6ZWlocWt5bmJwcG15c2FtIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDg3MTMyMjYsImV4cCI6MjA2NDI4OTIyNn0.c-FqwCTKqEddZULCHDvfL9PYNbz6nWPBlbMVQnlZaIU"
    }
  }
}
